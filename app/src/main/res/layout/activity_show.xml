<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#88B2EF"
        android:text="-"
        android:textColor="#FAFAFA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:layout_margin="10dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Widget.MaterialComponents.Snackbar.TextView"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <SeekBar
            android:layout_margin="5dp"
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:thumb="@drawable/androidd"
            android:progressBackgroundTint="#A3A3A3"
            android:max="100" />


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/playy"
                android:layout_gravity="center"
                android:id="@+id/btn_play"
                android:visibility="visible"
                android:clickable="false"
                android:background="#FAFAFA" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pause"
                android:layout_gravity="center"
                android:id="@+id/btn_pause"
                android:visibility="invisible"
                android:background="#FAFAFA" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/forward10"
            android:layout_gravity="center"
            android:clickable="false"
            android:background="#FAFAFA"/>


    </LinearLayout>

</LinearLayout>